<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Milk Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <h1 style="        background-image: url(https://i.pinimg.com/550x/f9/14/ab/f914abd13a7bda56dcd2230d5083f5df.jpg)"</h1>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color:#bc09fa">Milk Shop</a>


                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" style="color:#000000" asp-area="" asp-controller="Home" asp-action="Gioithieu">| Giới thiệu |</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="        color: #000000" asp-area="" asp-controller="Home" asp-action="Motasanpham">Mô tả sản phẩm |</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="        color: #000000" asp-area="" asp-controller="Home" asp-action="Privacy">Liên hệ |</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="        color: #000000" asp-area="" asp-controller="Milk" asp-action="Index">Đặt hàng </a>
                        </li>
                    </ul>
                </div>
                
                </div>
</nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Milk Shop HieuBUG - <a asp-area="" asp-controller="Home" asp-action="Privacy">Địa chỉ liên hệ</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
