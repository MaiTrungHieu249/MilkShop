@model MilkShop.Models.MilkGenreViewModel

@{
    ViewData["Title"] = "Thêm Sản Phẩm";
}

<h1>Thêm Sản Phẩm</h1>

<p>
    <a asp-action="Create"> Đặt hàng</a>
</p>
<form asp-controller="Milk" asp-action="Index" method="get">
    <p>
        <select asp-for="MilkGenre" asp-items="Model.Genres">
            <option value="">Hãng sữa</option>
        </select>

        Sản phẩm : <input type="text" name="SearchString" />
        <input type="submit" value="Tìm kiếm" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Milks[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Milks[0].ReleaseDate)
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Milks[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Milks[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Milks[0].Rating)

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Milks)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Xoá</a>
            </td>
        </tr>
        }
    </tbody>
</table>
