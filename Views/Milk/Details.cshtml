@model MilkShop.Models.Milk

@{
    ViewData["Title"] = "Chi tiết";
}

<h1>Chi tiết sản phẩm</h1>

<div>
    <h4>Milk</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên sữa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Ngày sản xuất
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            Hãng sữa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            Giá bán
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">sửa</a> |
    <a asp-action="Index">Quay lại</a>
</div>
